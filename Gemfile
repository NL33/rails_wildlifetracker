source 'https://rubygems.org'

gem 'rails'
gem 'pg'
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'


group :development do
  gem 'better_errors'  #helps with debug
  gem 'binding_of_caller' #tool for better errors
  gem 'quiet_assets' #make logs easier to read
end

group :test, :development do
  gem 'rspec-rails'  
end

group :test do
  gem 'shoulda-matchers'
end
